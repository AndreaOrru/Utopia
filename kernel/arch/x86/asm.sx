.intel_syntax noprefix
.text

.global gdt_load
.type gdt_load, @function
gdt_load:
    mov eax, [esp + 4]
    lgdt [eax]

    mov ax, 0x10
    mov ds, ax
    mov es, ax
    mov fs, ax
    mov gs, ax
    mov ss, ax
    jmp 0x08:.reload_cs
    .reload_cs:
        ret

.global tss_load
.type tss_load, @function
tss_load:
    mov ax, [esp + 4]
    ltr ax
    ret

.global idt_load
.type idt_load, @function
idt_load:
    mov eax, [esp + 4]
    lidt [eax]
    ret
