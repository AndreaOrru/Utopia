#define ALIGN     (1 << 0)
#define MEMINFO   (1 << 1)
#define FLAGS     (ALIGN | MEMINFO)
#define MAGIC     0x1BADB002
#define CHECKSUM  -(MAGIC + FLAGS)

.section .multiboot
.align 4
    .long MAGIC
    .long FLAGS
    .long CHECKSUM

.section .text
.global boot
.type boot, @function
boot:
    mov $0x7C00, %esp

    push %ebx
    call main

    cli
    hlt
